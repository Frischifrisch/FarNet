<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>PowerShell scripting for FarNet</Description>
    <TargetFramework>net472</TargetFramework>
    <LangVersion>9.0</LangVersion>
    <WarningLevel>5</WarningLevel>
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <FarHome Condition=" '$(FarHome)' == '' ">C:\Bin\Far\x64</FarHome>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Bench\**" />
    <Compile Remove="Modules\**" />
    <Compile Remove="Samples\**" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FarNet\FarNet.Tools\FarNet.Tools.csproj" />
    <ProjectReference Include="..\FarNet\FarNet\FarNet.csproj" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Management.Automation">
      <HintPath>$(MSBuildProgramFiles32)\Reference Assemblies\Microsoft\WindowsPowerShell\3.0\System.Management.Automation.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="ib install $(MSBuildProjectDirectory)\PowerShellFar.build.ps1 -FarHome $(FarHome) -Configuration $(Configuration) -TargetFramework $(TargetFramework)" />
  </Target>

</Project>
